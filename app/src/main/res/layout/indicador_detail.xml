<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:minHeight="300dp"
    android:minWidth="300dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvIndicadorSelecc_dg_indicador"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="horizontal">



        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:id="@+id/tilAplicado_dg_indicador"
            android:background="@drawable/border"
            android:hint="APLICADO">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAplicado_dg_indicador"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tilPendiente_dg_indicador"
            android:layout_marginLeft="2dp"
            android:background="@drawable/border"
            android:hint="PENDIENTE">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/etPendiente_dg_indicador"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/etComentarios_dg_indicador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:gravity="top|left"
        android:hint="Comentario"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:inputType="textCapSentences|textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnGuardar_dg_indicador"
            android:layout_width="0dp"
            android:background="@drawable/border"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnCancelar_dg_indicador"
            android:layout_width="0dp"
            android:background="@drawable/border"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>